<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rt="using:WinRTUtil"
    xmlns:local="using:MtgLifeCounter.Views.Resources">
    <LinearGradientBrush x:Key="brushGreen">
        <LinearGradientBrush.Transform>
            <CompositeTransform Rotation="45"/>
        </LinearGradientBrush.Transform>
        <GradientStop Offset="0" Color="LightGreen" />
        <GradientStop Offset="1" Color="Green" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="brushRed">
        <LinearGradientBrush.Transform>
            <CompositeTransform Rotation="45"/>
        </LinearGradientBrush.Transform>
        <GradientStop Offset="0" Color="Red" />
        <GradientStop Offset="1" Color="Maroon" />
    </LinearGradientBrush>
    
    <rt:DataStyle x:Key="styleVisibility">
        <rt:DataStyle.Triggers>
            <rt:DataTrigger Binding="{Binding IsVisible}" Value="False">
                <Setter Property="FrameworkElement.Visibility" Value="Collapsed" />
            </rt:DataTrigger>
        </rt:DataStyle.Triggers>
    </rt:DataStyle>
</ResourceDictionary>
